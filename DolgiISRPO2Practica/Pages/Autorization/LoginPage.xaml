<Page x:Class="DolgiISRPO2Practica.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DolgiISRPO2Practica.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock Text="Login"/>
            <TextBox x:Name="BLogin" Background="White"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="BPassword" Background="White"/>
            <Button x:Name="TBLogin" Content="Login" Click="TBLogin_Click"/>
            <Button x:Name="BExit" Content="Exit" Click="BExit_Click"/>
        </StackPanel> 
    </Grid>
</Page>
